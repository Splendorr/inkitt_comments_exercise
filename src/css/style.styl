p
  paragraph()
  
  
#container
  center(1200px)
  padding-top 3em
  
#headerHolder
  col(.55, offset: .05)
  // stack()
  padding-bottom 1em 

.clearfix
  cf()

#content
  col(.55, offset: .05)
  
  font-family: freight-text-pro, Georgia, Cambria, "Times New Roman", Times, serif;
  p
    paragraph(20px)
    margin-top 0
    padding-top 0  
  
.sectionHeader
  font-family: 'Droid Serif', Georgia, Cambria, 'Times New Roman', Times, serif;
  font-size 3em 
  text-rendering: optimizelegibility;
  
#comments
  col(.35)
  
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
  font-weight: 300;
  
  h1
    font-size 1.5em 
  
  h2
    font-size 1.1em 
    margin-bottom 0
    padding-bottom 0
  span
    margin-top 0
    padding-top 0
  p
    margin-top 0
    padding-top 0   
    font-size 0.9em
    
.notesHeader
  font-size 1em
  font-weight: 500;
  upcase()
    
.hairline
  border: 0;
  height: 0;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);

  // border: 0;
