    &:active 
      color: #b31d44 
    
/*Tooltip div styling */
.tooltipDiv {
  display: none;
  width: 4em;
  z-index: 101;
  background-color: #323232;
  // border: 2px solid #666;
  box-shadow: 0px 2px 0px rgba(50, 50, 50, .5);
  padding: 12px 12px 12px 12px;
  border-radius: 10px 10px 10px 10px;
}