.commentAuthor
  font-size 1em
  font-weight: 500;
  

.deletebutton
  float right
  color #b31d44 
  font-size 0.6em
  
  a
    transition: all .125s ease
    
    &:link 
      // color: ranHair
      color: #b31d44 
      text-decoration none
      padding: 0.4em
      // border-bottom: 1px dashed gray;
      // border-bottom: 1px dashed gray;
        
      // background-image: linear-gradient(to right, white 50%, rgba(255,255,255,0) 0%);
      // background-position: bottom left;
      // background-size: 4px 1px;
      // background-repeat: repeat-x;
      
    &:hover 
      font-size 1.5em 
      color: #fff !important
      background-color #b05a71 
      border-radius: 3px;
      padding: 0.4em
      // background-image: linear-gradient(to right, silver 50%, rgba(255,255,255,0) 0%);
